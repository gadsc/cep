<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="${rootArtifactId}jpa" transaction-type="JTA">

        <provider>com.ibm.websphere.persistence.PersistenceProviderImpl</provider>

        <jta-data-source>jdbc/[FILL HERE!]</jta-data-source>

        <mapping-file>META-INF/mapping/file.xml</mapping-file>

        <class>class_file_here</class>

        <properties>
            <property name="openjpa.jdbc.DBDictionary" value="oracle(batchLimit=XX)" />
            <property name="openjpa.TransactionMode" value="managed" />
            <property name="openjpa.ConnectionFactoryMode" value="managed" />
            <property name="openjpa.Log" value="DefaultLevel=WARN,Runtime=WARN,Tool=WARN"/>
        </properties>
    </persistence-unit>

</persistence>